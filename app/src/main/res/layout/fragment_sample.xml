<RelativeLayout
	xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:tools="http://schemas.android.com/tools"
	android:layout_width="match_parent"
	android:layout_height="wrap_content"
	android:background="#00FF00"
	tools:context="com.example.abdul_wahab.lab05fall17fragment2activitycommunication.fragments.SampleFragment"
	>
	
	<EditText
		android:id="@+id/etInputMessage"
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:hint="Enter Value here"
		/>
	
	<Button
		android:id="@+id/btnPress"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:text="Press Me"
		android:layout_below="@+id/etInputMessage"
		android:layout_alignParentStart="true"
		android:layout_marginStart="125dp"
		/>


</RelativeLayout>
